<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <ImageView
        android:id="@+id/msg_img"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_lock"
        android:layout_margin="10dip"
       />

    <TextView
        android:id="@+id/msg_nfc_id"
        style="@style/myEditTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/msg_img"
        android:layout_marginTop="5dip"
        android:text="12345678901234" />

    <TextView
        android:id="@+id/msg_nfc_change_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:text="2015-10-02 19:52" 
        android:layout_alignTop="@+id/msg_nfc_id"/>

    <TextView
        android:id="@+id/msg_nfc_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/msg_nfc_id"
        android:layout_below="@+id/msg_nfc_id"
        android:layout_marginTop="5dip"
        android:text="123456789" />
 <TextView
        android:id="@+id/msg_nfc_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/msg_nfc_change_time"
        android:layout_alignTop="@+id/msg_nfc_type"
        android:layout_marginRight="10dip"
/>
</RelativeLayout>